{% extends 'base.html.twig' %}

{% block title %}Advert{% endblock %}

{% block body %}
    <h1>Advert</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ advert.id }}</td>
            </tr>
            <tr>
                <th>Task</th>
                <td>{{ advert.task }}</td>
            </tr>
            <tr>
                <th>Skill</th>
                <td>{{ advert.skill }}</td>
            </tr>
            <tr>
                <th>Education</th>
                <td>{{ advert.education }}</td>
            </tr>
            <tr>
                <th>Courselevel</th>
                <td>{{ advert.courselevel }}</td>
            </tr>
            <tr>
                <th>Jobdescription</th>
                <td>{{ advert.jobdescription }}</td>
            </tr>
            <tr>
                <th>Deadline</th>
                <td>{{ advert.deadline ? advert.deadline|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ advert.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ advert.email }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ advert.code }}</td>
            </tr>
            <tr>
                <th>Submitted</th>
                <td>{{ advert.submitted ? advert.submitted|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Institution</th>
                <td>{{ advert.institution }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ advert.location }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('advert_index') }}">back to list</a>

    <a href="{{ path('advert_edit', {'id': advert.id}) }}">edit</a>

    {{ include('advert/_delete_form.html.twig') }}
{% endblock %}
