<form method="post" style="float:right; margin-left:8px;" action="{{ path('comment_delete', {'id': comment.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
    <button class="float-right btn ml-2btn btn-danger"><i class="fa fa-trash"></i> Delete</button>
</form>