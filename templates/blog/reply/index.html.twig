{% extends 'base.html.twig' %}

{% block title %}Reply index{% endblock %}

{% block body %}
    <h1>Reply index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Content</th>
                <th>Submitted</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reply in replies %}
            <tr>
                <td>{{ reply.id }}</td>
                <td>{{ reply.name }}</td>
                <td>{{ reply.email }}</td>
                <td>{{ reply.content }}</td>
                <td>{{ reply.submitted ? reply.submitted|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('reply_show', {'id': reply.id}) }}">show</a>
                    <a href="{{ path('reply_edit', {'id': reply.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reply_new') }}">Create new</a>
{% endblock %}
