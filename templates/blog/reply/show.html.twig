{% extends 'base.html.twig' %}

{% block title %}Reply{% endblock %}

{% block body %}
    <h1>Reply</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reply.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ reply.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ reply.email }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ reply.content }}</td>
            </tr>
            <tr>
                <th>Submitted</th>
                <td>{{ reply.submitted ? reply.submitted|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reply_index') }}">back to list</a>

    <a href="{{ path('reply_edit', {'id': reply.id}) }}">edit</a>

    {{ include('blog/reply/_delete_form.html.twig') }}
{% endblock %}
