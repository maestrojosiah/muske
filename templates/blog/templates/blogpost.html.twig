<script type="application/ld+json">
{
  "@context" : "http://schema.org",
  "@type" : "Article",
  "name" : "{{post.getUrlTitle}}",
  "author" : "{{post.musician.fullname|title}}",
  "image" : "https://muske.co.ke/uploads/blog/{{ post.image }}",
  "articleBody" : "{{post.content|raw|e}}",
  "dateCreated" : "{{post.submitted|date('c')}}",
  "URL" : "https://muske.co.ke/post/{{post.id}}/{{post.getUrlTitle}}"
}
</script>

{% endblock %}