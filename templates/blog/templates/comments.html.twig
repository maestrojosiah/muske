				<div class="blog-comments-section">
                    <!-- comment form -->
                    <div id="comment-form-{{post.id}}" class="card" style="margin-bottom:15px; display:none;">
                        <div class="card-body">
                            <div class="row">
                                <form class="col-md-12">
                                <h4>Leave a Comment</h4>
                                    <div class="row form-group">
                                        <div class="col">
                                        <input type="text" id="commenter-name" class="form-control" placeholder="Your Name">
                                        </div>
                                        <div class="col">
                                        <input type="email" id="commenter-email" class="form-control" placeholder="Your Email">
                                        </div>
                                    </div>                                
                                    <div class="form-group">
                                        <textarea id="comment" class="form-control" placeholder="Your comment" rows="3"></textarea>
                                    </div>
                                    <button type="button" id="submit-comment-{{post.id}}" class="btn btn-primary">Submit</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- end comment form -->

                    <div class="card">
                        <div class="card-body">
                            <!-- just in comment -->
                            <div id="just-in-comment" class="row" style="display:none;">
                                <div class="col-md-2 text-center">
                                    <img src="https://image.ibb.co/jw55Ex/def_face.jpg" style="width:50px; height:50px;" class="img img-rounded img-fluid"/>
                                    <p class="text-secondary text-center"><small>Just now</small></p>
                                </div>
                                <div class="col-md-10">
                                    <p>
                                        <a id="just-in-name" class="float-left" href=""></a>
                                    </p>
                                <div class="clearfix"></div>
                                    <p id="just-in-content"></p>
                                </div>
                            </div>
                            <hr />
                            <!-- end just in comment -->
                                
                            <!-- comments from db -->
                            {% for comment in post.comments|sort|reverse %}
                            <div class="row">
                                <div class="col-md-2 text-center">
                                    <img src="https://image.ibb.co/jw55Ex/def_face.jpg" style="width:50px; height:50px;" class="img img-rounded img-fluid"/>
                                    <p class="text-secondary text-center"><small>{{comment.submitted|date("F jS \\a\\t g:ia")}}</small></p>
                                </div>
                                <div class="col-md-10">
                                    <p>
                                        <a class="float-left" href="#"><strong>{{comment.name}}</strong></a>
                                    </p>
                                <div class="clearfix"></div>
                                    <p>{{comment.content}}</p>
                                    <p>
                                        <a id="leave-reply-{{comment.id}}" class="float-right btn btn-outline-primary ml-2"> <i class="fa fa-reply"></i> Reply</a>
                                    </p>
                                </div>
                            </div>
                                <hr />
                                <!-- reply form -->
                                <div id="reply-form-{{comment.id}}" class="card card-inner" style="margin-left:4rem; margin-top:15px; display:none;">
                                    <div class="card-body">
                                        <div class="row">
                                            <form class="col-md-12">
                                            <h5>Reply</h5>
                                                <div class="row form-group">
                                                    <div class="col">
                                                    <input type="text" id="replier-name-{{comment.id}}" class="form-control" placeholder="Your Name">
                                                    </div>
                                                    <div class="col">
                                                    <input type="email" id="replier-email-{{comment.id}}" class="form-control" placeholder="Your Email">
                                                    </div>
                                                </div>                                
                                            <div class="form-group">
                                                <textarea class="form-control" id="reply-{{comment.id}}" rows="2"></textarea>
                                            </div>
                                            <button type="button" id="submit-reply-{{comment.id}}" class="btn btn-primary">Submit</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <!-- end reply form -->

                                <!-- just in reply -->
                                <div id="just-in-reply-{{comment.id}}" class="card card-inner" style="margin-left:4rem; margin-top:15px; display:none">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-2 text-center">
                                                <img src="https://image.ibb.co/jw55Ex/def_face.jpg" style="width:50px; height:50px;" class="img img-rounded img-fluid"/>
                                                <p class="text-secondary text-center"><small>Just now</small></p>
                                            </div>
                                            <div class="col-md-10">
                                                <p><a id="just-in-reply-name-{{comment.id}}" href="#"></a></p>
                                                <p id="just-in-reply-content-{{comment.id}}"></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- end just in reply -->

                                <!-- replies from db -->
                                {% for reply in comment.replies %}
                                <div class="card card-inner" style="margin-left:4rem; margin-top:15px;">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-2 text-center">
                                                <img src="https://image.ibb.co/jw55Ex/def_face.jpg" style="width:50px; height:50px;" class="img img-rounded img-fluid"/>
                                                <p class="text-secondary text-center"><small>{{comment.submitted|date("F jS \\a\\t g:ia")}}</small></p>
                                            </div>
                                            <div class="col-md-10">
                                                <p><a href="#"><strong>{{reply.name}}</strong></a></p>
                                                <p>{{reply.content}}</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                                {% endfor %}
                                <!-- end replies from db --> 
                                
                            {% endfor %}
                            <!-- end comments -->
                            
                        </div>
                    </div>
				</div><!--//blog-comments-section-->
