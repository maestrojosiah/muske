{% extends 'base.html.twig' %}

{% block title %}Education index{% endblock %}

{% block body %}
    <h1>Education index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Institution</th>
                <th>Fromyear</th>
                <th>Toyear</th>
                <th>Coursename</th>
                <th>Degree</th>
                <th>Location</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for education in education %}
            <tr>
                <td>{{ education.id }}</td>
                <td>{{ education.institution }}</td>
                <td>{{ education.fromyear ? education.fromyear|date('Y-m-d') : '' }}</td>
                <td>{{ education.toyear ? education.toyear|date('Y-m-d') : '' }}</td>
                <td>{{ education.coursename }}</td>
                <td>{{ education.degree }}</td>
                <td>{{ education.location }}</td>
                <td>
                    <a href="{{ path('education_show', {'id': education.id}) }}">show</a>
                    <a href="{{ path('education_edit', {'id': education.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('education_new') }}">Create new</a>
{% endblock %}
