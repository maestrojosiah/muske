{% extends 'base.html.twig' %}

{% block title %}Job index{% endblock %}

{% block body %}
    <h1>Job index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Jobtitle</th>
                <th>Startingfrom</th>
                <th>Endedin</th>
                <th>Currentornot</th>
                <th>Location</th>
                <th>Institution</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs|sort((a, b) => b.id <=> a.id) %}
            <tr>
                <td>{{ job.id }}</td>
                <td>{{ job.jobtitle }}</td>
                <td>{{ job.startingfrom ? job.startingfrom|date('Y-m-d') : '' }}</td>
                <td>{{ job.endedin ? job.endedin|date('Y-m-d') : '' }}</td>
                <td>{{ job.currentornot }}</td>
                <td>{{ job.location }}</td>
                <td>{{ job.institution }}</td>
                <td>
                    <a href="{{ path('job_show', {'id': job.id}) }}">show</a>
                    <a href="{{ path('job_edit', {'id': job.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('job_new') }}">Create new</a>
{% endblock %}
