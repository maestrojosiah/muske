{% extends 'base_profile.html.twig' %}

{% block title %}{{musician.fullname}}{% endblock %}
{% block stylesheets %}
        <style>
        .skills ul{
            display:block;
            margin:0 auto;
            padding:0;
            max-width:800px
        }
        .skills li{
            display:inline-block;
            margin:7px;
            padding:5px 10px;
            color:#374054;
            background:#e4e4ea;
            list-style:none;
            cursor:default;
            font-size:1.2em
        }

        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border: 1px solid transparent;
            border-radius: 4px
        }

        .alert h4 {
            margin-top: 0;
            color: inherit
        }

        .alert .alert-link {
            font-weight: 700
        }

        .alert>p,
        .alert>ul {
            margin-bottom: 0
        }

        .alert>p+p {
            margin-top: 5px
        }

        .alert-dismissable,
        .alert-dismissible {
            padding-right: 35px
        }

        .alert-dismissable .close,
        .alert-dismissible .close {
            position: relative;
            top: -2px;
            right: -21px;
            color: inherit
        }

        .alert-success {
            color: #3c763d;
            background-color: #dff0d8;
            border-color: #d6e9c6
        }

        .alert-success hr {
            border-top-color: #c9e2b3
        }

        .alert-success .alert-link {
            color: #2b542c
        }


        .alert-info {
            color: #31708f;
            background-color: #d9edf7;
            border-color: #bce8f1
        }

        .alert-info hr {
            border-top-color: #a6e1ec
        }

        .alert-info .alert-link {
            color: #245269
        }

        </style>
{% endblock %}
{% block body %}

    <div id="mobile-menu-open" class="shadow-large">
        <i class="fa fa-bars" aria-hidden="true"></i>
    </div>
    <!-- End #mobile-menu-toggle -->
    <header>
        <div id="mobile-menu-close">
            <span>Close</span> <i class="fa fa-times" aria-hidden="true"></i>
        </div>
        <ul id="menu" class="shadow">
            <li>
                <a href="#about">About</a>
            </li>
            <li>
                <a href="#experience">Experience</a>
            </li>
            <li>
                <a href="#education">Education</a>
            </li>
            <li>
                <a href="#projects">Projects</a>
            </li>
            <li>
                <a href="#skills">Skills</a>
            </li>
            <li>
                <a href="#contact">Contact</a>
            </li>
        </ul>
    </header>
    <!-- End header -->

    <div id="lead">
        <div id="lead-content">
            <h1>{{musician.fullname}}</h1><br />
            {% for job_role in musician.jobstobeoffered %}
            <h4 style="display:inline; color:white;" >{{job_role.jobtitle}} {% if loop.index < musician.jobstobeoffered|length %} | {% endif %}</h4>
            {% endfor %}<br /><br />
            {% if app.user == null %}
            <a href="#" class="btn-rounded-white">Download Resume</a>
            <br />
            <br />
            {% endif %}
            {% if app.user and app.user != null %}
                <a class="btn btn-sm btn-rounded-white" href="{{ path('musician_profile')}}" target="_blank">Profile Page</a>
            {% endif %}
        </div>
        <!-- End #lead-content -->

        <div id="lead-overlay"></div>

        <div id="lead-down">
            <span>
                <i class="fa fa-chevron-down" aria-hidden="true"></i>
            </span>
        </div>
        <!-- End #lead-down -->
    </div>
    <!-- End #lead -->

    <div id="about">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <img src="{{ musician.photourl }}" width="50%" height="50%" background="#777" color="#777" style="border-radius: 50%; max-width: 300px"  >
                </div>
                <div class="col-md-9">
                    <p>
                        {{musician.about}}
                    </p>
                    <ul class="skills">
                        {% if musician.settings and musician.settings.tsc == 'true' %} <li> TSC Certified  </li>{% endif %}
                        {% if musician.settings and musician.settings.online == 'true' %} <li> Online Lessons Available  </li>{% endif %}
                        {% if musician.settings and musician.settings.placeofwork != null %} <li> {{musician.settings.placeofwork}}  </li>{% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End #about -->

    <div id="experience" class="background-alt">
        <h2 class="heading">Experience</h2>
        <div id="experience-timeline">
        {% for job in jobs %}
            <div data-date="{{job.startingfrom|date("F Y")}} â€“ {{job.currentornot == 'current' ? 'Present' : job.endedin|date("F Y") }}">
                <h3>{{job.jobtitle}}</h3>
                <h4>{{job.institution}}{{" / " ~ job.location}}</h4>
                <p>
                {% if job.roles is empty %}
                    {% if app.user and app.user != null %}
                        You haven't added any roles that you did in this job. Please <a href="{{ path('role_new', {'job_id': job.id}) }}">Add some roles </a>
                    {% else %}
                        Did all the required roles that a {{job.jobtitle}} should do. You can <a target="_blank" href="http://www.google.com/search?q={{job.jobtitle|replace({' ': '+'}) }}+Job+Description">search on google</a> what the roles are.
                    {% endif %}
                {% else %}
                    <ul>
                        {% for role in job.roles %}
                        <li>{{role.role}}</li>
                        {% endfor %}
                        {% if app.user and app.user != null %}<li><a href="{{ path('role_new', {'job_id': job.id}) }}">Add roles</a></li>{% endif %}
                    </ul>
                {% endif %}
                </p>
            </div>
        {% endfor %}
        </div>
    </div>
    <!-- End #experience -->

    <div id="education">
        <h2 class="heading">Education</h2>

        {% for edu in educ %}
        {# {{dump(edu)}} #}
        <div class="education-block">
            <h3>{{edu.institution}}</h3>
            <span class="education-date">{{edu.fromyear|date("M Y")}} - {{edu.toyear|date("M Y")}}</span>
            <h4>{{edu.coursename}} {{edu.degree}}</h4>
            <span id="alert_{{edu.id}}"></span>
            {% if app.user and app.user != null and app.user.settings and (app.user.isproandactive == 'true' or app.user.ismuskeandactive == 'true') %}
                
                <form  id="document_form_{{edu.id}}" name="doc" method="post" action enctype="multipart/form-data" {% if edu.document != null %} style="display:none;" {% endif %}>
                    <div class="row alert alert-info">
                        <div class="col-md-5">
                            <h4>Upload supporting document </h4>
                        </div>
                        <div class="col-md-5">
                            <input type="file" id="doc_edu_{{edu.id}}" name="doc_edu_{{edu.id}}" required="required">
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-success" id="upload_doc_{{edu.id}}">Upload</button>
                        </div>
                    </div>
                </form> 
                
            {% endif %} 

            <ul class="skills">
            {% if edu.document != null and (musician.isproandactive == 'true' or musician.ismuskeandactive == 'true') and (app.user and app.user != null) %}              
                <li><a id="download_doc_{{edu.id}}" href="{{ path('download_pdf', {'file': edu.document.doc} ) }}" download> Download supporting document </a></li>
            {% endif %}            
            {% if edu.specialties is empty %}
                {% if app.user and app.user != null %}
                    You haven't added any skills that you learned in this institution. Please <a href="{{ path('specialty_new', {'education_id': edu.id}) }}">Add some skills </a>
                {% else %}
                    Learned a lot of things that are found under {{edu.coursename}} course. You can <a target="_blank" href="http://www.google.com/search?q={{edu.coursename|replace({' ': '+'}) }}+Course+Description+{{edu.institution|replace({' ': '+'})}}">search on google</a> what some of the skills are.
                {% endif %}
            {% else %}
                {% for skill in edu.specialties %}
                    <li>
                        {{skill.instrumentorskill}}
                    </li>
                {% endfor %}
                {% if app.user and app.user != null %}
                <li><a href="{{ path('specialty_new', {'education_id': edu.id}) }}">Add skills</a></li>
                <li><a id="change_doc_{{edu.id}}">Change Document</a></li>
                {% endif %}                
            {% endif %}
            </ul>
        </div>
        {% endfor %}
        <!-- End .education-block -->
    </div>
    <!-- End #education -->
    {% if musician.projects %}
    <div id="projects" class="background-alt">
        <h2 class="heading">Projects</h2>
        <div class="container">
            <div class="row">
            {% for project in musician.projects %}
                <div class="project shadow-large">
                    <div class="project-image col-md-4" style="position:relative; margin-left:-25px;">
                        {% if project.projectimage == null or project.projectimage == ""%}
                            <img id="project_image_{{project.id}}" src="{{ asset('devportfolio/images/project.jpg') }}" />
                            {% if app.user and app.user != null %}
                            <form style="position:absolute; top:20px; left:0; background-color:white;" id="image_form" name="Document" method="post" action enctype="multipart/form-data">
                                <div class="col-md-6">
                                    <input type="file" id="documento_{{project.id}}" name="project[projectimage]" required="required">
                                </div>
                                <div class="col-md-3">
                                    <button type="button" {#onclick="saveDoc()"#} class="btn btn-success" id="proj_{{project.id}}">Upload</button>
                                </div>
                            </form>     
                            {% endif %}               
                            
                        {% else %}
                            <img id="project_image_{{project.id}}" src="{{project.imagelink}}" style="max-width:250px;" />
                            {% if app.user and app.user != null %}
                            <form style="position:absolute; top:20px; left:0; background-color:white;" id="image_form" name="Document" method="post" action enctype="multipart/form-data">
                                <div class="col-md-6">
                                    <input type="file" id="documento_{{project.id}}" name="project[projectimage]" required="required">
                                </div>
                                <div class="col-md-3">
                                    <button type="button" {#onclick="saveDoc()"#} class="btn btn-success" id="proj_{{project.id}}">Upload</button>
                                </div>
                            </form>     
                            {% endif %}               
                        {% endif %}
                    </div>
                    <!-- End .project-image -->
                    <div class="project-info col-md-8">
                        <h3>{{project.projecttitle}}</h3>
                        <p>
                            {{project.projectdescription}}
                        </p>
                        <a href="#">View Project</a>
                    </div>
                    <!-- End .project-info -->
                </div>
                <!-- End .project -->
            {% endfor %}
            </div>
        </div>
    </div>
    <!-- End #projects -->
    {% endif %}

    <div id="skills">
        <h2 class="heading">Skills</h2>
        <ul>
            {% for skill in musician.skills %}
            <li>{{skill.skillname}} | <i>{{skill.levelofskill}}</i> | {{skill.experienceofskill}}</li>
            {% endfor %}
        </ul>
    </div>
    <!-- End #skills -->
    {% if (musician.settings and musician.isproandactive == 'true') or (musician.settings and musician.ismuskeandactive == 'true') %}
    <div id="album_intro"  style="text-align: center; margin-bottom: 50px;" class="background-alt">
        
        <h2 class="heading">Gallery</h2>
        <div class="container">

          <div class="row text-center text-lg-left">
          {% if fourPhotos|length > 1 %}
            {% for photo in fourPhotos %}
            <div class="col-lg-3 col-md-4 col-xs-6">
            <a href="#" class="d-block mb-4 h-100">
                <img class="img-fluid img-thumbnail" src="{{photo.thumbnailpath}}" alt="">
            </a>
            <a href="{{ path('gallery_index', {'username': musician.username })}}" class="btn-rounded-blue">See More Photos</a>
            </div>
            {% endfor %}
          {% else %}
            <p>There are currently no photos in this gallery</p>
            {% if app.user and app.user != null %}
            <a href="{{ path('gallery_new')}}" class="btn-rounded-blue">Add Photos</a>
            {% endif %}
          {% endif %}
          </div>
        </div>
        

    </div>
    {% endif %}
    <!-- /.album_intro -->


    <div id="contact" class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>Contact {{musician.settings and musician.isproandactive ? musician.fullname : "Form" }}</h2>
                <div id="contact-form">
                    <form method="POST" action="https://formspree.io/email@email.com">
                        <input type="hidden" name="_subject" value="Contact request from personal website" />
                        <input type="email" name="_replyto" placeholder="Your email" required>
                        <textarea name="message" placeholder="Your message" required></textarea>
                        <button type="submit">Submit</button>
                    </form>
                </div>

            </div>
            <div class="col-md-6">
                <h2>Leave a Review</h2>
                <div id="contact-form">
                    <form method="POST" action="https://formspree.io/email@email.com">
                        <input type="hidden" name="_subject" value="Contact request from personal website" />
                        <input type="email" name="_replyto" placeholder="Your email" required>
                        <textarea name="message" placeholder="Your message" required></textarea>
                        <button type="submit">Submit</button>
                    </form>
                </div>

            </div>
        </div>

    </div>
    <!-- End #contact -->

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-sm-5 copyright">
                    <p>
                        Copyright &copy; {{"now"|date("Y")}} {{musician.username}} | {% if app.user and app.user != null %} <a href="{{path("app_logout")}}">Logout</a> {% else %} <a href="{{path("homepage")}}">Login</a>{% endif %}
                    </p>
                </div>
                <div class="col-sm-2 top">
                    <span id="to-top">
                        <i class="fa fa-chevron-up" aria-hidden="true"></i>
                    </span>
                </div>
                <div class="col-sm-5 social">
                    <ul>
                        <li>
                            <a href="https://github.com/" target="_blank"><i class="fa fa-github" aria-hidden="true"></i></a>
                        </li>
                        <li>
                            <a href="https://stackoverflow.com/" target="_blank"><i class="fa fa-stack-overflow" aria-hidden="true"></i></a>
                        </li>
                        <li>
                            <a href="https://linkedin.com/" target="_blank"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                        </li>
                        <li>
                            <a href="https://www.facebook.com/" target="_blank"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                        </li>
                        <li>
                            <a href="https://twitter.com/" target="_blank"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                        </li>
                        <li>
                            <a href="https://plus.google.com/" target="_blank"><i class="fa fa-google-plus" aria-hidden="true"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <!-- End footer -->

{% endblock %}
{% block javascripts %}

<script>
$(document).on("click", '[id^="proj_"]', function(){

    var project = jQuery(this).attr("id");
    var splitted = project.split('_'); //changeRow_Qt_1504
    var id = splitted[1] //1504

// function saveDoc() {
    var inputFile = document.getElementById('documento_'+id);
    var file = inputFile.files[0];
    var data = new FormData();
    data.append('doc', file, file.name);
    $.ajax({
        url: "{{ path('upload_project_image') }}",
        type: "POST",
        data: data,
        processData: false,
        contentType: false,
        cache: false,
        success: function (data){
            console.log(data);
            console.log("saved information");
            $.ajax({
                url:"{{ (path('upload_project_image')) }}",
                type: "POST",
                dataType: "json",
                data: {
                    "id": id,
                    "filename": data,
                },
                async: true,
                success: function (data)
                {
                    console.log(data);
                    console.log("saved another information");
                    $("#project_image"+"_"+id).attr("src", data).css("maxWidth", '250px');
                },
                error: function () {
                    $("#warning").html("<b>something's wrong</b>");
                }
            });

        },
        error: function () {
            $("#warning").html("<b>something's wrong</b>");
        }

    });

});
</script>

<script>
$(document).on("click", '[id^="upload_doc_"]', function(){

    var project = jQuery(this).attr("id");
    var splitted = project.split('_'); //changeRow_Qt_1504
    var id = splitted[2] //1504

// function saveDoc() {
    var inputFile = document.getElementById('doc_edu_'+id);
    var file = inputFile.files[0];
    var data = new FormData();
    data.append('doc', file, file.name);
    $.ajax({
        url: "{{ path('upload_education_document') }}",
        type: "POST",
        data: data,
        processData: false,
        contentType: false,
        cache: false,
        success: function (data){
            console.log(data);
            console.log("saved information");
            $.ajax({
                url:"{{ (path('upload_education_document')) }}",
                type: "POST",
                dataType: "json",
                data: {
                    "id": id,
                    "filename": data,
                },
                async: true,
                success: function (data)
                {
                    console.log(data);
                    console.log("saved another information");
                    // $("#project_image"+"_"+id).attr("src", data).css("maxWidth", '250px');
                    $("#alert_"+id).html(
                        '<div class="alert alert-success" role="alert">' +
                            'You have successfully uploaded the file.' +
                        '</div>'
                    );
                    $("#document_form_"+id).hide();
                    $("#download_doc_"+id).attr("href", data);
                    
                },
                error: function () {
                    $("#warning").html("<b>something's wrong</b>");
                }
            });

        },
        error: function () {
            $("#warning").html("<b>something's wrong</b>");
        }

    });

});
</script>


<script>
$(document).on("click", '[id^="change_doc_"]', function(){

    var project = jQuery(this).attr("id");
    var splitted = project.split('_'); //changeRow_Qt_1504
    var id = splitted[2] //1504

    $("#document_form_"+id).show();
     
});
</script>


{% endblock %}