{% block body %}

<div class="container" id="simple_one">
	<div class="row">
		<div class="col-md-9" id="header">
			<div class="mt-3">
				<h3>{{musician.fullname}}</h3>
				<a href="#"><img src="https://muske.co.ke/icons/phone.png" style="margin:0px;padding:0px;width:10px; height:10px;" />&nbsp;{{musician.phone}}</a>
				<a href="#"><img src="https://muske.co.ke/icons/mail.png" style="margin:0px;padding:0px;width:10px; height:10px;" />&nbsp;{{musician.email}}</a>
				<a href="#"><img src="https://muske.co.ke/icons/sphere.png" style="margin:0px;padding:0px;width:10px; height:10px;" />&nbsp;www.muske.co.ke{{musician.username}}</a>
			</div>
		</div>
		<div class="col-md-3">
			{% if musician.hassettings and musician.settings.signature|length > 0 and musician.settings.appendsignature == 'true' %}
			<p class="text-right"><small>{{musician.hassettings and musician.settings.signature|length > 0 ? musician.settings.signature|nl2br }}</small></p>
			{% endif %}
		</div>
	</div>
	<div class="clearfix"></div>
	<div class="row">
		<div class="col-md-12 mb-3">
			<div class="card">
				<div class="card-header">
					<h5 class="mb-0">Profile</h5>
				</div>
				<div class="card-body">
					<p class="card-text">{{musician.about}}</p>
				</div>
			</div>
		</div>
		<div class="col-md-12 mb-3">
			<div class="card">
				<div class="card-header">
					<h5 class="mb-0">Job History</h5>
				</div>
				<div class="card-body">
					{% for job in jobs %}
					<div class="row sec">
						<div class="col-md-9">
							<h5 class="sec-heading">{{job.jobtitle}}<br></h5><small><em>{{job.institution}}</em><br></small></div>
						<div class="col-md-3 text-right"><small>{{job.startingfrom|date("M Y")}} â€“ {{job.currentornot == 'current' ? 'Present' : job.endedin|date("M Y") }}</small></div>
						<div class="col-md-9">
							<ul class="sec-list">
								{% for role in job.roles %}
								<li>{{role.role}}<br></li>
								{% endfor %}
							</ul>
						</div>
					</div>
					{% endfor %}
				</div>
			</div>
			<div class="card">
				<div class="card-header">
					<h5 class="mb-0">Education background</h5>
				</div>
				<div class="card-body">
					<div class="row sec">
						{% for edu in educ %}
						<div class="col-md-12 edu-sec">
							<h5 class="sec-heading">{{edu.coursename}}<br></h5>
							<p class="sec-paragraph">{{edu.institution}}, {{edu.location}},<br></p><small><em>{{edu.fromyear|date("M Y")}} - {{edu.toyear|date("M Y")}}</em><br></small>
						</div>
						{% endfor %}
					</div>
				</div>
			</div>
			<div class="card">
				<div class="card-header">
					<h5 class="mb-0">Skills</h5>
				</div>
				<div class="row sec">
					<div class="col-md-12 edu-sec">
						<ul>
							{% for skill in musician.skills %}
							<li>{{skill.skillname}} |&nbsp;<strong>{{skill.levelofskill}}</strong>&nbsp;| skill.skillexperience<br></li>
							{% endfor %}
						</ul>
					</div>
				</div>
			</div>
			<div class="card">
				<div class="card-header">
					<h5 class="mb-0">Specialties</h5>
				</div>
				<div class="row sec">
					<div class="col-md-12 edu-sec">
						<ul>
							{% for job_role in musician.jobstobeoffered %}
								<li>{{job_role.jobtitle}}<br></li>
							{% endfor %}
						</ul>
					</div>
				</div>
			</div>
			{% if musician.projects is not empty %}
			<div class="card">
				<div class="card-header">
					<h5 class="mb-0">Projects</h5>
				</div>
				<div class="card-body pt-1">
					<div class="row sec">
						<div class="col-md-12 edu-sec">
							{% for project in musician.projects %}
							<h5 class="sec-heading">{{project.projecttitle}}<br></h5>
							<p class="mt-3">{{project.projectdescription}}.<br>
							</p>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
			{% endif %}
			{% if musician.referees is not empty %}
			<div class="card">
				<div class="card-header">
					<h5 class="mb-0">Referees</h5>
				</div>
				<div class="card-body pt-1">
					<div class="row sec">
						{% for referee in musician.referees %}
						<div class="col-md-4 edu-sec mb-3">
							<h6 class="ref-h6">{{referee.name}}</h6>
							<p class="ref">{{referee.title}}</p>
							<p class="ref">{{referee.address}}</p>
							<p class="ref">{{referee.contact}}</p>
						</div>
						{% endfor %}
					</div>
				</div>
			</div>
			{% endif %}
		</div>
	</div>
</div>

{% endblock %}
