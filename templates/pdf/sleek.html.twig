{% block body %}
{% if thumbnailurl is not defined %}
{% set thumbnailurl = musician.thumbnailurl %}
{% endif %}

    <div class="animated" id="resume-page" style="display: block;">
        <div class="container resume" id="resume">
            <div class="row">
                <div class="col-md-9">
                    <div class="img-holder row header top-row">
                        <div class="col-md-2"><img class="img-fluid profile-pic" src="{{thumbnailurl}}"></div>
                        <div class="col">
                            <h3 style="font-family: Alice, serif;">{{musician.fullname}}</h3>
                            <h5>Musician</h5>
                            <a class="spaced-links" href="tel:{{musician.phone}}">&nbsp;<img src="https://muske.co.ke/icons/phone.png" style="margin:0px;padding:0px;width:10px; height:10px;" />&nbsp;{{musician.phone}}</a>
                            <a class="spaced-links" href="mailto:{{musician.email}}">&nbsp;<img src="https://muske.co.ke/icons/mail.png" style="margin:0px;padding:0px;width:10px; height:10px;" />&nbsp;{{musician.email}}</a>
                            <a class="spaced-links" href="https://www.muske.co.ke/{{musician.username}}">&nbsp;<img src="https://muske.co.ke/icons/sphere.png" style="margin:0px;padding:0px;width:10px; height:10px;" />&nbsp;www.muske.co.ke{{musician.username}}</a>
                        </div>
                    </div>
                    <div class="card about">
                        <div class="card-header">
                            <h5 class="mb-0">Profile</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">{{musician.about}}</p>
                        </div>
                    </div>
                    <div class="card content">
                        <div class="card-header">
                            <h5 class="mb-0">Experience</h5>
                        </div>
                        <div class="card-body">
                            {% for job in jobs %}
                            <div class="row item">
                                <div class="col-md-4 date-and-place">
                                    <h6>{{job.startingfrom|date("M Y")}} â€“ {{job.currentornot == 'current' ? 'Present' : job.endedin|date("M Y") }}</h6>
                                    <p>{{job.jobtitle}} at {{job.location}}</p>
                                </div>
                                <div class="col-md-8 list-details">
                                    <h4>{{job.institution}}</h4>
                                    <ul>
                                        {% for role in job.roles %}
                                        <li>{{role.role}}<br></li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="card content">
                        <div class="card-header">
                            <h5 class="mb-0">Education</h5>
                        </div>
                        <div class="card-body">
                            {% for edu in educ %}
                            <div class="row item">
                                <div class="col-md-4 date-and-place">
                                    <h6>{{edu.fromyear|date("M Y")}} - {{edu.toyear|date("M Y")}}</h6>
                                    <p>{{edu.location}}</p>
                                </div>
                                <div class="col-md-8 list-details">
                                    <h4>{{edu.institution}}</h4>
                                    <p>{{edu.coursename}}</p>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                    {% if musician.projects is not empty %}
                    <div class="card content">
                        <div class="card-header">
                            <h5 class="mb-0">Projects</h5>
                        </div>
                        {% for project in musician.projects %}
                        <div class="card-body">
                            <h4>{{project.projecttitle}}</h4>
                            <p>{{project.projectdescription}}</p>
                        </div>
                        {% endfor %}
                    </div>
                    {% endif %}
                    {% if musician.referees is not empty %}
                    <div class="card content">
                        <div class="card-header">
                            <h5 class="mb-0">Referees</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                {% for referee in musician.referees %}
                                <div class="col-md-4 text-left">
                                    <p style="margin-bottom:0px; margin-top:0px;">{{referee.name}}</p>
                                    <p style="margin-bottom:0px; margin-top:0px;">{{referee.title}}</p>
                                    <p style="margin-bottom:0px; margin-top:0px;">{{referee.address}}</p>
                                    <p style="margin-bottom:0px; margin-top:0px;">{{referee.contact}}</p>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>
                <div class="col-md-3">
                    {% if musician.hassettings and musician.settings.signature|length > 0 and musician.settings.appendsignature == 'true' %}
                    <div class="card details top-row">
                        <div class="card-header">
                            <h5 class="mb-0">Details</h5>
                        </div>
                        <div class="card-body">
                            <p class="text-capitalize card-text">{{musician.hassettings and musician.settings.signature|length > 0 ? musician.settings.signature|nl2br }}</p>
                        </div>
                    </div>
                    {% endif %}
                    <div class="card skills">
                        <div class="card-header">
                            <h5 class="mb-0">Skills</h5>
                        </div>
                        <ul class="list-group list-group-flush">
                            {% for skill in musician.skills %}
                                <li class="list-group-item"><span>{{skill.skillname}}</span></li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="card skills">
                        <div class="card-header">
                            <h5 class="mb-0">Specialties</h5>
                        </div>
                        <ul class="list-group list-group-flush">
                            {% for job_role in musician.jobstobeoffered %}
                                <li class="list-group-item"><span>{{job_role.jobtitle}}</span></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}