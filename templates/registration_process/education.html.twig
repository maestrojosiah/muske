<div id="education" style="display: none;">
    <h1 class="text-center reg-heading">Education Background</h1>
    <h3 class="text-center reg-heading-two">Your education background, save one at a time</h3>
    <hr>
    <div class="steps-progressbar cursor-pointer">
        <ul>
            <li class="previous" id="goto-info">Info</li>
            <li class="previous" id="goto-jobs">Jobs</li>
            <li class="active" id="goto-education">Education</li>
            <li id="goto-skills">Skills</li>
            <li id="goto-roles">Roles</li>
            <li id="goto-projects">Projects</li>
        </ul>
    </div>
    {% set toReturn = '<!-- edit --> <span class="btn btn-outline" style="cursor: pointer; position: absolute; top: 5px; right: 15px;" id="url-/admin/edit/education/edu.id/false" data-toggle="modal" data-target="#editor"><i class="fa fa-pencil"></i></span> <!-- edit -->' %}
    <div class="register-photo">
        <div class="form-container">
            <form id="education-form" class="underlined-inputs">
                <div class="form-row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <legend>Course name</legend><input class="init form-control auto-coursename-education" name="coursename" type="text" autofocus="" required="" minlength="5"><small class="form-text text-muted">The name of the course. eg. Music theory</small></div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <legend>Which level?</legend><input class="form-control auto-degree-education" name="degree" type="text" required=""><small class="form-text text-muted">Was it a diploma, certificate, degree or masters?</small></div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <legend>Institution name</legend><input class="form-control auto-institution-education" name="institution" type="text" required="" minlength="5" inputmode="email"><small class="form-text text-muted">The name of the institution that you took the course</small></div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <legend>Location of institution</legend><input class="form-control auto-location-education" name="location" type="text" required="" minlength="2"><small class="form-text text-muted">Did you do take this course online or in Nairobi?&nbsp;</small></div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <legend>When did you start?</legend><input class="form-control auto-fromyear-education" name="fromyear" id="from_year" required="" minlength="2"><small class="form-text text-muted">The month and year that you started the course. eg, 31-12-1996</small></div>
                    </div>
                    <div class="col-md-12 notify-education">
                        <div class="form-group">
                            <legend>When will / did you complete?</legend><input class="form-control auto-toyear-education" name="toyear" id="to_year" required="" minlength="2"><small class="form-text text-muted">Future date will show as "Ongoing" on your CV (resume), 31-12-1996</small></div>
                    </div>
                    <input type="hidden" name="class" value="Education" />
                    <input type="hidden" name="extras" value="musician" />
                    <input type="hidden" name="return" value="{{toReturn}}" />
                    <input type="hidden" name="texttoreplace" value="edu.id" />
                    <div class="col-md-12">
                        <div class="form-group reg-action"><button class="btn btn-info btn-lg" id="savedetail-education" type="button">Save Education Background</button></div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="next-prev">
        <div class="container">
            <div class="row">
                <div class="col-6 col-md-6"><a class="btn btn-info btn-block btn-lg" type="button" id="to-jobs-from-education">Previous</a></div>
                <div class="col-6"><a class="btn btn-info btn-block btn-lg" type="button" id="to-skills-from-education">Next</a></div>
            </div>
        </div>
    </div>
</div>