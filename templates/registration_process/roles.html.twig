<div id="roles" style="display: none;">
    <h1 class="text-center reg-heading">Job Roles</h1>
    <h3 class="text-center reg-heading-two">Which jobs can you do? Save one at a time</h3>
    <hr>
    <div class="steps-progressbar cursor-pointer">
        <ul>
            <li class="previous" id="goto-info">Info</li>
            <li class="previous" id="goto-jobs">Jobs</li>
            <li class="previous" id="goto-education">Education</li>
            <li class="previous" id="goto-skills">Skills</li>
            <li class="active" id="goto-roles">Roles</li>
            <li id="goto-projects">Projects</li>
        </ul>
    </div>
    {% set toReturnRole = '<span class="btn btn-outline" style="cursor: pointer;" id="url-/admin/edit/myJobs/role.id/false" data-toggle="modal" data-target="#editor"><i class="fa fa-pencil"></i></span> ' %}
    <div class="register-photo">
        <div class="form-container col-12">
            <form id="roles-form" class="underlined-inputs">
                <div class="form-row">
                    <div class="col-md-12 notify-roles">
                        <h4>Add a job that you can do</h4>
                        <div class="form-group">
                            <label>Job Role</label>
                            <input name="jobtitle" type="text" id="submit-roles" class="init form-control auto-jobtitle-roles" autofocus /><small class="form-text text-muted">Add a role that you can do. Examples include Piano instructor, Choir Trainer, Composer, Saxophone Teacher etc</small>
                        </div>
                    </div>
                    <input type="hidden" name="class" value="JobToBeOffered" />
                    <input type="hidden" name="extras" value="musician" />
                    <input type="hidden" name="return" value="{{toReturnRole}}" />
                    <input type="hidden" name="texttoreplace" value="role.id" />
                    <div class="col-sm-6 col-md-12">
                        <div class="form-group reg-action"><button class="btn btn-info btn-lg" id="savedetail-roles" type="button">Save Role</button></div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="next-prev">
        <div class="container">
            <div class="row">
                <div class="col-6"><a class="btn btn-info btn-block btn-lg" type="button" id="to-skills-from-roles">Previous</a></div>
                <div class="col-6"><a class="btn btn-info btn-block btn-lg" role="button" id="to-projects-from-roles">Next</a></div>
            </div>
        </div>
    </div>
</div>