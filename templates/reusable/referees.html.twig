                    <input type="hidden" name="class" value="referee" />
                    <input type="hidden" name="extras" value="musician" /`>
                    <button class="for-user btn btn-primary btn-sm" type="button" id="save-referee-{{i}}">Save</button>
                </form>
            </div>
        {% endfor %}
        {% endif %}
    </div>    
