
<form class="d-flex" method="post">

    <li class="nav-item">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}    
    </li>          

    <li class="nav-item">
        <input class="form-control mr-2" type="text" name="username" value="{{ last_username }}" id="inputUsername" placeholder="Username" aria-label="inputUsername" required >
    </li>          
    &nbsp;
    <li class="nav-item">
        <input class="form-control mr-2"  type="password" name="password" id="inputPassword" placeholder="Password" required>
    </li>          

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    &nbsp;
    <li class="nav-item">
        <button  class="btn btn-outline-success" type="submit">
            Login
        </button>
    </li>          

    
</form>
{# {% endblock %} #}
