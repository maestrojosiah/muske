{% extends 'base.html.twig' %}

{% block title %}Skill index{% endblock %}

{% block body %}
    <h1>Skill index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Skillname</th>
                <th>Levelofskill</th>
                <th>Experienceofskill</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for skill in skills %}
            <tr>
                <td>{{ skill.id }}</td>
                <td>{{ skill.skillname }}</td>
                <td>{{ skill.levelofskill }}</td>
                <td>{{ skill.experienceofskill }}</td>
                <td>
                    <a href="{{ path('skill_show', {'id': skill.id}) }}">show</a>
                    <a href="{{ path('skill_edit', {'id': skill.id}) }}">edit</a>
                </td>
            </tr>
    
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('skill_new') }}">Add another skill</a>
    {% if skills|length > 0 %}
        <a href="{{path('education_new')}}">Next Step</a>
    {% endif %}
{% endblock %}
