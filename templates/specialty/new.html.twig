{% extends 'base_wizard.html.twig' %}

{% block title %}House Keeping{% endblock %}

{% block body %}

	<div class="image-container set-full-height" style="background-image: url('{{ asset('img/drumset.jpg')}}')">
	{# Photo by Derek Truninger on Unsplash #}

	    <!--   Big container   -->
	    <div class="container">
	        <div class="row">
		        <div class="col-sm-8 col-sm-offset-2">
		            <!--      Wizard container        -->
		            <div class="wizard-container">
		                <div class="card wizard-card" data-color="blue" id="wizard">
			                <form action="" method="">
                            {# {{ form_start(form) }} #}
							{# {{dump(form)}} #}
			                <!--        You can switch " data-color="rose" "  with one of the next bright colors: "blue", "green", "orange", "purple"        -->

		                    	<div class="wizard-header">
		                        	<h3 class="wizard-title">
		                        		Skills...
		                        	</h3>
									<h5>Make your resume captivating. </h5>
		                    	</div>
								<div class="wizard-navigation">
									<ul>
			                            <li><a href="#skill" data-toggle="tab">Skills From Your Courses</a></li>
			                        </ul>
								</div>

		                        <div class="tab-content">
		                            <div class="tab-pane" id="skill">
		                                <div class="row">
		                                    <h4 class="info-text"> Select an institution from the left column and add the skills you learned. </h4>
		                                	<div class="col-sm-4">
		                                    	<div class="form-group label-floating">
                                                    <div class="list-group">
                                                    {% for edu in edus %}
                                                    <a 
                                                    href="{{ path('specialty_new', {'education_id': edu.id} )}}" 
                                                    class="list-group-item list-group-item-action {{ edu.id == education.id ? 'active' : '' }}">
                                                        {{edu.institution}}
                                                    </a>
                                                    {% endfor %}
                                                    </div>		                                    	
                                                </div>
		                                	</div>
		                                    <div class="col-sm-6 col-sm-offset-1">
		                                        <div class="form-group label-floating">
                                                    <h4>{{education.degree}} {{education.coursename}} at {{education.institution}}</h4>
		                                        </div>
		                                        <div class="form-group label-floating">
                                                    <label class="control-label" for="edu_skill">Skill (e.g Piano, choir training...)</label>
                                                    <input type="text" class="form-control" id="edu_skill">
		                                        </div>
		                                    </div>
		                                	<div class="col-sm-5 col-sm-offset-1">
		                                    	<div class="form-group label-floating">
		                                    	</div>
		                                	</div>
		                                	<div class="col-sm-5">
		                                    	<div class="form-group label-floating">
                                                    <button type="button" id="save_edu_skill" class="btn btn-primary">Save This Skill</button>
		                                    	</div>
		                                	</div>
		                                </div>
										<div class="skills for_skills">
											<ul>
												{% for skill in education.specialties %}
												<li>{{skill.instrumentorskill}}</li>
												{% endfor %}
											</ul>
										</div>

		                            </div>
		                        </div>
		                        <div class="wizard-footer">
	                            	<div class="pull-right">
	                                    {# <input type='button' class='btn btn-next btn-fill btn-primary btn-wd' name='next' value='Next' /> #}
	                                    {# <input type='button' class='btn btn-finish btn-fill btn-primary btn-wd' name='finish' value='Finish' /> #}
                                        <a class='btn btn-fill btn-primary btn-wd' href="{{path('musician_show', {'username': education.musician.username } )}}">Done</a>
                                        {# <button class='btn btn-finish btn-fill btn-primary btn-wd'>{{ button_label|default('Finish') }}</button> #}
	                                </div>
	                                <div class="pull-left">
	                                    {# <input type='button' class='btn btn-previous btn-fill btn-default btn-wd' name='previous' value='Previous' /> #}
	                                </div>
		                            <div class="clearfix"></div>
		                        </div>
			                </form>
                            {# {{ form_end(form) }} #}
		                </div>
		            </div> <!-- wizard container -->
		        </div>
	        </div> <!-- row -->
	    </div> <!--  big container -->

	    <div class="footer">
	        <div class="container text-center">
	             Made with <i class="fa fa-heart heart"></i> by <a href="http://www.creative-tim.com">Creative Tim</a>. Free download <a href="http://www.creative-tim.com/product/bootstrap-wizard">here.</a>
	        </div>
	    </div>
	</div>



{% endblock %}

{% block javascripts %}

	<script>

	$( "#save_edu_skill" ).click(function() {

		var skill = $("#edu_skill").val();              
		var education_id = "{{education.id}}";              

			$.ajax({
				url:'{{ (path('save_edu_skill')) }}',
				type: "POST",
				dataType: "json",
				data: {
					"skill": skill,
					"education_id": education_id,
				},
				async: true,
				success: function (data)
				{
					console.log(data);
					console.log("saved skill");
					$("#edu_skill").val('');
					// location.href = "{{ path('location_new')}}";
					$(".for_skills ul").append("<li>"+data+"</li>");
					$("#edu_skill").focus();
					$("#save_edu_skill").prop('disabled', false);
				},
				error: function () {
					$("#warning").html("<b>something's wrong</b>");
				}
			});

	});

	</script>

	<script>
		$(document).on("click", '[id^="save_"]', function(){

			$(this).prop('disabled', true);

		});
	</script>


{% endblock %}